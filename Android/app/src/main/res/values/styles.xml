<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>

        <!-- Needed for full screen nav bar -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <!-- Needed to make the navigation drawer icon color -->
    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimary_text</item>
    </style>

    <style name="ToolbarStyle" parent="AppTheme">
        <!-- Need to make icons appear white on Toolbar -->
        <item name="android:textColorPrimary">@color/colorPrimary_text</item>
        <!-- Needed for popup menus -->
        <item name="android:textColor">@color/colorMenuText</item>
        <item name="android:textColorSecondary">@color/colorPrimary_text</item>
    </style>

</resources>
